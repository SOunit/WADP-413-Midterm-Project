<%- include("_header") -%>

<h1>Add Comment</h1>

<form action="/comment/<%= blog._id %>" method="post">
  <div class="form-horizontal">
    <%- include("_comment-editor") -%>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input
          type="submit"
          value="Add Comment"
          class="btn btn-default btn-warning"
        />
        <a class="btn btn-outline-dark cancel" href="/">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>
